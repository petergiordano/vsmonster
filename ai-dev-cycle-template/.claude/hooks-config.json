{
  "hooks": {
    "file-events": {
      "on-create": {
        "enabled": true,
        "patterns": [
          "src/**/*.py",
          "src/**/*.js",
          "src/**/*.ts",
          "src/**/*.jsx",
          "src/**/*.tsx",
          "src/**/*.go",
          "src/**/*.java",
          "src/**/*.php",
          "src/**/*.rb",
          "components/**/*.js",
          "components/**/*.ts",
          "components/**/*.jsx",
          "components/**/*.tsx"
        ],
        "exclude_patterns": [
          "**/__pycache__/**",
          "**/node_modules/**",
          "**/.git/**",
          "**/*.pyc",
          "**/*.min.js",
          "**/dist/**",
          "**/build/**"
        ],
        "priority": "high",
        "timeout": 30000,
        "actions": [
          "generate_test_file",
          "create_documentation_stub",
          "run_quality_checks",
          "update_project_index"
        ]
      },
      "on-save": {
        "enabled": true,
        "patterns": [
          "src/**/*",
          "tests/**/*",
          "components/**/*",
          "*.py",
          "*.js",
          "*.ts",
          "*.jsx",
          "*.tsx",
          "*.go",
          "*.java"
        ],
        "exclude_patterns": [
          "**/__pycache__/**",
          "**/node_modules/**",
          "**/.git/**",
          "**/*.pyc",
          "**/*.log",
          "**/coverage/**"
        ],
        "priority": "medium",
        "timeout": 15000,
        "debounce": 1000,
        "actions": [
          "format_code",
          "run_linting",
          "execute_related_tests",
          "update_documentation",
          "security_scan"
        ]
      },
      "on-delete": {
        "enabled": true,
        "patterns": [
          "src/**/*",
          "tests/**/*",
          "components/**/*"
        ],
        "exclude_patterns": [
          "**/__pycache__/**",
          "**/node_modules/**",
          "**/.git/**"
        ],
        "priority": "low",
        "timeout": 10000,
        "actions": [
          "cleanup_related_files",
          "update_imports",
          "check_broken_references",
          "update_documentation_index"
        ]
      }
    },
    "development-events": {
      "pre-commit": {
        "enabled": true,
        "priority": "critical",
        "timeout": 120000,
        "blocking": true,
        "quality_gates": {
          "code_quality": {
            "enabled": true,
            "min_score": 8.0
          },
          "test_coverage": {
            "enabled": true,
            "min_percentage": 80
          },
          "security_scan": {
            "enabled": true,
            "fail_on_high": true
          },
          "performance_check": {
            "enabled": true,
            "max_bundle_size": "5MB"
          }
        },
        "actions": [
          "run_full_test_suite",
          "check_code_quality",
          "scan_security_vulnerabilities",
          "validate_dependencies",
          "check_documentation",
          "verify_build_success"
        ]
      },
      "post-implementation": {
        "enabled": true,
        "priority": "medium",
        "timeout": 60000,
        "trigger_patterns": [
          "feature/**",
          "src/**",
          "components/**"
        ],
        "actions": [
          "organize_imports",
          "update_documentation",
          "run_coverage_analysis",
          "optimize_performance",
          "update_changelog",
          "generate_api_docs"
        ]
      },
      "test-completion": {
        "enabled": true,
        "priority": "medium",
        "timeout": 30000,
        "result_formats": [
          "junit",
          "json",
          "lcov"
        ],
        "actions": [
          "analyze_test_results",
          "generate_coverage_report",
          "detect_flaky_tests",
          "update_test_badges",
          "create_performance_report",
          "notify_team_on_failures"
        ]
      }
    }
  },
  "execution": {
    "parallel_execution": {
      "enabled": true,
      "max_concurrent": 3,
      "queue_strategy": "priority"
    },
    "retry_policy": {
      "max_retries": 2,
      "retry_delay": 5000,
      "exponential_backoff": true
    },
    "logging": {
      "enabled": true,
      "level": "info",
      "file": ".claude/logs/hooks.log",
      "max_size": "10MB",
      "rotation": true
    },
    "performance": {
      "monitor_execution_time": true,
      "alert_on_slow_hooks": true,
      "slow_threshold": 30000
    }
  },
  "steering_integration": {
    "enabled": true,
    "context_files": [
      ".claude/steering/development.md",
      ".claude/steering/testing.md",
      ".claude/steering/quality.md",
      ".claude/steering/security.md"
    ],
    "project_type_detection": {
      "enabled": true,
      "auto_configure": true,
      "type_mapping": {
        "web_application": {
          "indicators": ["package.json", "webpack.config.js", "vite.config.js"],
          "additional_hooks": ["accessibility_check", "seo_validation"]
        },
        "data_processing": {
          "indicators": ["requirements.txt", "Pipfile", "pandas", "numpy"],
          "additional_hooks": ["data_validation", "pipeline_testing"]
        },
        "api_service": {
          "indicators": ["main.py", "app.py", "server.js", "api/"],
          "additional_hooks": ["api_contract_testing", "load_testing"]
        },
        "mobile_app": {
          "indicators": ["android/", "ios/", "react-native", "flutter"],
          "additional_hooks": ["device_testing", "performance_profiling"]
        }
      }
    },
    "quality_standards": {
      "code_quality": {
        "min_score": 7.0,
        "tools": ["eslint", "pylint", "sonarqube"]
      },
      "test_coverage": {
        "min_percentage": 75,
        "exclude_patterns": ["tests/", "**/*.test.*"]
      },
      "security": {
        "vulnerability_scan": true,
        "dependency_check": true,
        "secrets_detection": true
      }
    }
  },
  "templates": {
    "test-generator": {
      "enabled": true,
      "priority": "high",
      "language_support": [
        "python",
        "javascript",
        "typescript",
        "go",
        "java"
      ],
      "test_frameworks": {
        "python": ["pytest", "unittest"],
        "javascript": ["jest", "mocha", "vitest"],
        "typescript": ["jest", "@testing-library"],
        "go": ["testing", "testify"],
        "java": ["junit", "testng"]
      },
      "test_types": [
        "unit",
        "integration", 
        "performance",
        "security"
      ]
    },
    "doc-updater": {
      "enabled": true,
      "priority": "medium",
      "documentation_types": [
        "api",
        "code",
        "user_guide",
        "changelog"
      ],
      "auto_generate": {
        "api_docs": true,
        "code_comments": false,
        "readme_updates": true,
        "changelog_entries": true
      },
      "formats": [
        "markdown",
        "rst",
        "html"
      ]
    },
    "security-scanner": {
      "enabled": true,
      "priority": "critical",
      "scan_types": [
        "static_code_analysis",
        "dependency_vulnerabilities",
        "secrets_detection",
        "configuration_security"
      ],
      "tools": {
        "python": ["bandit", "safety", "semgrep"],
        "javascript": ["eslint-plugin-security", "audit", "snyk"],
        "go": ["gosec", "nancy"],
        "docker": ["hadolint", "trivy"],
        "general": ["detect-secrets", "truffleHog"]
      },
      "severity_levels": ["low", "medium", "high", "critical"],
      "fail_on_severity": "high"
    }
  },
  "notifications": {
    "channels": {
      "console": {
        "enabled": true,
        "level": "info"
      },
      "file": {
        "enabled": true,
        "path": ".claude/logs/notifications.log",
        "level": "warning"
      },
      "webhook": {
        "enabled": false,
        "url": "",
        "events": ["critical_failure", "security_alert"]
      },
      "github_issues": {
        "enabled": false,
        "auto_create": false,
        "labels": ["automated", "hook-generated"]
      }
    },
    "event_routing": {
      "test_failures": ["console", "file"],
      "security_alerts": ["console", "file", "webhook"],
      "performance_issues": ["console", "file"],
      "quality_violations": ["console", "file"]
    }
  },
  "environment": {
    "development": {
      "hooks_enabled": true,
      "quality_gates_strict": false,
      "notifications_verbose": true
    },
    "staging": {
      "hooks_enabled": true,
      "quality_gates_strict": true,
      "notifications_verbose": false
    },
    "production": {
      "hooks_enabled": false,
      "quality_gates_strict": true,
      "notifications_verbose": false
    }
  },
  "customization": {
    "project_specific_hooks": {
      "enabled": true,
      "directory": ".claude/hooks/custom/",
      "auto_discover": true
    },
    "hook_overrides": {
      "enabled": true,
      "merge_strategy": "override"
    },
    "user_preferences": {
      "notification_frequency": "important_only",
      "execution_feedback": "summary",
      "auto_fix_enabled": false
    }
  },
  "version": "1.0.0",
  "schema_version": "2024.1",
  "last_updated": "2024-07-19T00:00:00Z",
  "maintainer": "AI Development Cycle Template",
  "documentation_url": "https://github.com/ai-dev-cycle-template/docs/hooks"
}